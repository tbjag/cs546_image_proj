<div class="header" id="myHeader">
  <span class = "spacer"></span>
  <div class="home">
    <h1><a href = '/home/'>Home</a></h1>
  </div>
  <span class = "spacer"></span>
  <div class="filter">
    <h2><a href = '/filters/'>Filters</a></h2>
  </div>
  <span class = "spacer"></span>
  <div class = "Files">
    <h2><a href = '/image/'>Files</a></h2>
  </div>
  <span class = "spacer"></span>
  <div class="login">
    {{#if logged}}
        <h2><a href = '/profile/'>{{username}}</a></h2>
    {{else}}
        <h2><a href = '/profile/'>Log in</a></h2>
    {{/if}}
  </div>
  <span class = "spacer"></span>
</div>
<div class="content">
	{{#if logged}}
    <p>Choose a filter</p>
    <form method="POST" id="myForm" action="/filters/filters">
        <select id="filt" name="filt">
            <option value="kmeans">KMeans</option>
            <option value="greyscale">Greyscale</option>
            <option value="invert">Invert</option>
            <option value="sepia">Sepia</option>
            <option value="remBlue">Remove Blue</option>
            <option value="remGreen">Remove Green</option>
            <option value="remRed">Remove Red</option>
            <option value="blur">Blur</option>
            <option value="posterize">Posterize</option>
        </select>
        <input type="submit" value="submit">
    </form>
    {{else}}
    <p>Please log in to use our filters!</p>
    {{/if}}
</div>

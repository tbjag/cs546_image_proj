<div class="header" id="myHeader">
  <span class = "spacer"></span>
  <div class="home">
    <h1><a href = '/home/'>Home</a></h1>
  </div>
  <span class = "spacer"></span>
  <div class="filter">
    <h2><a href = '/filters/'>Filters</a></h2>
  </div>
  <span class = "spacer"></span>
  <div class = "Files">
    <h2><a href = '/image/'>Files</a></h2>
  </div>
  <span class = "spacer"></span>
  <div class="login">
    {{#if logged}}
        <h2><a href = '/profile/'>{{username}}</a></h2>
    {{else}}
        <h2><a href = '/profile/'>Log in</a></h2>
    {{/if}}
  </div>
  <span class = "spacer"></span>
</div>
{{#if logged}}
<div class="user-profile">
	<p>{{welcomeTitle}}</p>
    <p>First Name: {{firstname}}</p>
    <p>Last Name: {{lastname}}</p>
    <p>Age: {{age}}</p>
    <p>Email: {{email}}</p>
    <p>Gender: {{gender}}</p>
    <p>City: {{city}}</p>
    <p>State: {{state}}</p>

	<form id = "logout-form" method="GET" action="/profile/logout">
	    <button type="submit" class="btn">Logout</button>
	</form>
</div>
{{else}}
<p class = "form-header">Log in</p>
<form id="login-form" method="POST" action="/profile/acct">
	<div class="login-form">
		<label for="email">Email</label>
		<input type="text" class="form-input" id="email" name="logemail" placeholder="Enter email"><br>
		<label for="password">Password</label>
		<input type="password" class="form-input" id="password" name="logpassword" placeholder="Enter password"><br>

		<div class="form-group">
		    <button type="submit" class="btn">Login</button>
		</div>
		{{#unless loginstatus}}
            <p class = "error">{{loginmessage}}</p>
        {{/unless}}
	</div>
</form>
<p class = "form-header">Register</p>
<form id="registration-form" method="POST" action="/profile/acct/">
	<div class="registration-form">
		<label for="firstname">First Name</label>
		<input type="text" class="form-input" id="firstname" name="firstname" placeholder="Enter first name"><br>
		<label for="lastname">Last Name</label>
		<input type="text" class="form-input" id="lastname" name="lastname" placeholder="Enter last name"><br>
		<label for="age">Age</label>
		<input type="number" class="form-input" id="age" name="age" placeholder="Enter last age"><br>
		
		<label for="email">Email</label>
		<input type="text" class="form-input" id="registeremail" name="email" placeholder="Enter email"><br>
		<label for="password">Password</label>
		<input type="password" class="form-input" id="registerpassword" name="password" placeholder="Enter password"><br>

		<label for="gender">Gender</label>
		<input type="text" class="form-input" id="gender" name="gender" placeholder="Enter gender"><br>
		<label for="city">City</label>
		<input type="text" class="form-input" id="city" name="city" placeholder="Enter city"><br>
		<label for="state">State</label>
		<input type="text" class="form-input" id="state" name="state" placeholder="Enter state"><br>

		<div class="form-group">
		    <button id = "register-button" type="submit" class="btn" onclick="checkRegister()">Register</button>
		</div>
		{{#unless registerstatus}}
            <p class = "error">{{registermessage}}</p>
        {{/unless}}
	</div>
</form>
<script>
	function checkRegister(){
		firstN = document.getElementById("firstname").value;
